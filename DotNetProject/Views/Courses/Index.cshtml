@model IEnumerable<DotNetProject.Entities.Courses>
@{
	ViewData["Title"] = "Courses Index";
}

<h1>@ViewData["Title"]</h1>

<p>
	<a asp-action="Create">Create New Course</a>

</p>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.First().CourseName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.First().Credits)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.First().CourseCode)
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.CourseName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Credits)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.CourseCode)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.CourseId">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.CourseId">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.CourseId">Delete</a>
				</td>
			</tr>
		}
	</tbody>

</table>


